<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdtermproject.atsea.base.MainActivity">


    <com.mdtermproject.atsea.graphics.CanvasView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/background"
        />

    <com.mdtermproject.atsea.graphics.CanvasView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/foreground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.mdtermproject.atsea.base.JoystickView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/move"
        custom:JV_buttonColor="#5F5F5F"
        custom:JV_borderColor="#9F9F9F"
        custom:JV_backgroundColor="#EFEFEF"
        custom:JV_borderWidth="4dp"
        custom:JV_fixedCenter="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="232dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
