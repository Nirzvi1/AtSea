<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF349ad9">

    <RelativeLayout
        app:layout_widthPercent="70%"
        app:layout_heightPercent="80%"
        android:layout_centerInParent="true"
        android:background="#FFf29546">


        <TextView
            android:text="Ship Yard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_marginTopPercent="10%"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ship_5"
            android:layout_marginTop="62dp"
            android:id="@+id/imageView"
            android:rotation="90"
            android:layout_below="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:layout_marginEnd="21dp" />

        <TextView
            android:text="Ship Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginStart="22dp" />

        <TextView
            android:text="Statistics:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginTop="40dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="Maneuverability: 0.06Â°/sec\nMax Velocity: 10 px/sec\nAccel: 0.1px/s^2\nStorage:50000 units\n500 cannons\nFire Rate: 700 shots/sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignStart="@+id/textView4" />

    </RelativeLayout>



</android.support.percent.PercentRelativeLayout>